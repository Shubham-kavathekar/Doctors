<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DataFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/range_layout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/vital_layout"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_vital"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@drawable/ic_baseline_share_24"
                    android:textColor="#696969"
                    android:gravity="center"
                    android:text="Share Vital Reading"/>

                <TextView
                    android:id="@+id/tv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:textColor="@color/white_toolbar"
                    android:textSize="18sp"
                    android:text="Vitals"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/first_modules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2"
                android:layout_below="@+id/vital_layout">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@drawable/module_border"
                    android:layout_marginRight="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/tv_heart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Heart\nRate"/>

                        <TextView
                            android:id="@+id/tv_count0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="64"
                            android:textSize="30sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text0"
                            android:layout_alignParentRight="true"
                            />

                        <TextView
                            android:id="@+id/tv_text0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_green"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/module_border"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">


                        <TextView
                            android:id="@+id/tv_breath"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Respiration \nRate"/>

                        <TextView
                            android:id="@+id/tv_count1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14"
                            android:textSize="30sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text1"
                            android:layout_alignParentRight="true"
                            />



                        <ImageView
                            android:id="@+id/img_breath"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_count1"/>

                        <TextView
                            android:id="@+id/tv_text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BPM"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_orange"/>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_modules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2"
                android:layout_below="@+id/first_modules">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@drawable/module_border"
                    android:layout_marginRight="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/tv_blood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Blood\nOxygen"/>

                        <TextView
                            android:id="@+id/tv_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95"
                            android:textSize="30sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text2"
                            android:layout_alignParentRight="true"
                            />

                        <TextView
                            android:id="@+id/tv_text2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_orange"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/module_border"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/tv_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Blood \nPressure"/>

                        <TextView
                            android:id="@+id/tv_count3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="110"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/ic_baseline_arrow_drop_up_24"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_count35"
                            android:layout_alignParentRight="true"
                            />

                        <TextView
                            android:id="@+id/tv_count35"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="70"
                            android:textSize="15sp"
                            android:drawableLeft="@drawable/ic_baseline_arrow_drop_down_24"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text3"
                            android:layout_alignParentRight="true"
                            />



                        <ImageView
                            android:id="@+id/img_breath3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_count3"/>

                        <TextView
                            android:id="@+id/tv_text3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="mmHq"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_green"/>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/sleep_layout"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_modules">

                <TextView
                    android:id="@+id/tv_sleep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white_toolbar"
                    android:text="Sleep"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/third_modules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2"
                android:layout_below="@+id/sleep_layout">

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:background="@drawable/module_border"
                    android:layout_marginRight="10dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/tv_score"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Sleep\nScore"/>

                        <TextView
                            android:id="@+id/tv_count4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="78"
                            android:textSize="30sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text4"
                            android:layout_alignParentRight="true"
                            />

                        <TextView
                            android:id="@+id/tv_text4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/100"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_green"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:background="@drawable/module_border"
                    android:layout_marginLeft="10dp"
                    android:layout_height="150dp">
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="18dp">

                        <TextView
                            android:id="@+id/tv_recovery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/blue_grey"
                            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                            android:text="Recovery"/>

                        <TextView
                            android:id="@+id/tv_count5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="95"
                            android:textSize="30sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/white_toolbar"
                            android:layout_above="@+id/tv_text5"
                            android:layout_alignParentRight="true"
                            />



                        <ImageView
                            android:id="@+id/img_breath5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_count5"/>

                        <TextView
                            android:id="@+id/tv_text5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textSize="20sp"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/blue_grey"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            />

                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/gradient_green"/>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>